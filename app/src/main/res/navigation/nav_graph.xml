<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.manhhung.movie.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_baseBottomSheetDialogFragment"
            app:destination="@id/baseBottomSheetDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/incomeFragment"
        android:name="com.manhhung.movie.ui.income.IncomeFragment"
        android:label="IncomeFragment"
        tools:layout="@layout/fragment_income" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.manhhung.movie.ui.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/baseBottomSheetDialogFragment"
        android:name="com.manhhung.movie.base.BaseBottomSheetDialogFragment"
        android:label="BaseBottomSheetDialogFragment"
        tools:layout="@layout/dialog_movie_detail">
        <argument
            android:name="movieId"
            app:argType="string" />
    </fragment>
</navigation>
